{
    "manifest_version": 2,
    "name": "ChatGPT",
    "version": "1.0",
    "description": "A Chrome extension that generates human-like text using the GPT-3 API.",
    "permissions": [
        "https://api.openai.com/*",
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "ChatGPT"
    },
    "content_security_policy": "script-src 'self' https://api.openai.com/; object-src 'self'"
}
